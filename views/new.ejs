<% include partials/header %>

<div class="container" >
  <div class="row text-center">
    <h1>Create a New Campground</h1>
    <div style="width: 36%; margin: 0 auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input class="form-control" type="form" name="name" placeholder="name">
        </div>

        <div class="form-group">
          <input class="form-control" type="form" name="image" placeholder="image url">
        </div>

        <div class="form-group">
          <button class="btn btn-block btn-success">Submit!</button>
        </div>
      </form>
      <a href="/campgrounds" class="btn btn-info" role="button">Back</a>
    </div>
  </div>

  <br>
  <% include partials/footer %>
</div>
